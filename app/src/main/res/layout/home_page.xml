<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/startDrugCheckBtn"
            android:layout_width="360dp"
            android:layout_height="105dp"
            android:layout_marginTop="244dp"
            android:background="@drawable/button_rounded_background"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="133dp"
                android:layout_height="wrap_content"
                android:text="START DRUG CHECK"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/buttonIcon"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/buttonIcon"
                android:layout_width="167dp"
                android:layout_height="98dp"
                android:layout_marginEnd="24dp"
                android:src="@drawable/start_drug_image"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.428" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/manageChecksBtn"
            android:layout_width="160dp"
            android:layout_height="150dp"
            android:layout_marginTop="500dp"
            android:background="@drawable/button_rounded_background"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.375"
            app:layout_constraintStart_toEndOf="@+id/disposedDrugsBtn"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/manageChecksIcon"
                android:layout_width="74dp"
                android:layout_height="74dp"
                android:paddingLeft="10dp"
                android:src="@drawable/manage_check_image"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.144" />

            <TextView
                android:id="@+id/manageChecksText"
                android:layout_width="127dp"
                android:layout_height="50dp"
                android:text="Manage Checks"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@id/manageChecksIcon"
                app:layout_constraintHorizontal_bias="0.49"
                app:layout_constraintStart_toStartOf="@id/manageChecksIcon"
                app:layout_constraintTop_toBottomOf="@id/manageChecksIcon" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/disposedDrugsBtn"
            android:layout_width="160dp"
            android:layout_height="150dp"
            android:layout_marginStart="64dp"
            android:layout_marginTop="500dp"
            android:background="@drawable/button_rounded_background"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/disposedDrugsIcon"
                android:layout_width="74dp"
                android:layout_height="74dp"
                android:padding="5dp"
                android:paddingLeft="10dp"
                android:src="@drawable/disposed_drugs_image"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.197" />

            <TextView
                android:id="@+id/disposedDrugsText"
                android:layout_width="127dp"
                android:layout_height="50dp"
                android:text="Disposed Drugs"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@id/disposedDrugsIcon"
                app:layout_constraintStart_toStartOf="@id/disposedDrugsIcon"
                app:layout_constraintTop_toBottomOf="@id/disposedDrugsIcon" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/listOfDrugsBtn"
            android:layout_width="360dp"
            android:layout_height="105dp"
            android:layout_marginTop="372dp"
            android:background="@drawable/button_rounded_background"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/drugsIcon"
                android:layout_width="164dp"
                android:layout_height="100dp"
                android:layout_marginEnd="28dp"
                android:src="@drawable/list_of_drugs_image"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.4" />

            <TextView
                android:id="@+id/drugsText"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="LIST OF DRUGS"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/drugsIcon"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/aboutMediphixBtn"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="768dp"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:padding="10dp"
            android:text="About Medtrack"
            android:textColor="@color/mediphix_blue"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="0dp"
            android:layout_height="142dp"
            android:layout_marginTop="48dp"
            android:src="@drawable/medtrack"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>